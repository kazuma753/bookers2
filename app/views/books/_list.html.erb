<div class="container">
    <div class="row">
    <div class="col-xs-3"> 
  <h1>User info</h1>
      <%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %>
    <table class="table">
      <tbody>

        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>

        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>

        <tr>
          <th>follow</th>
          <th><%= link_to following_user_path(user) do %>
            <%= user.followings.count %>
          <% end %></th>
        </tr>

        <tr>
          <th>follower</th>
          <th><%= link_to followers_user_path(user) do %>
            <%= user.followers.count %>
          <% end %></th>
        </tr>
        <tr>
        <% unless current_user == user %>
      <% if current_user.following?(user) %>
        <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
          <%= hidden_field_tag :follow_id, user.id %>
          <%= f.submit 'Unfollow', class: 'btn btn-danger btn-block' %>
        <% end %>
      <% else %>
        <%= form_for(current_user.relationships.build) do |f| %>
          <%= hidden_field_tag :follow_id, user.id %>
          <%= f.submit 'Follow', class: 'btn btn-primary btn-block' %>
        <% end %>
      <% end %>
    <% end %>
    </tr>
      </tbody>
    </table>
<div class="row">
<%= link_to edit_user_path(user.id), class: 'btn btn-default btn-lg col-xs-12' do %>   
  <i class="glyphicon glyphicon-wrench"></i>
<% end %>
</div>
<h1>New book</h1>
<!-- form_for部分 -->
    <%= form_for(book) do |f| %>

    <% if book.errors.any? %>
      <b><%= book.errors.count %> errors prohibited this book from being saved:</b>
<% book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>

<% end %>

  <h4>タイトル</h4>
    <%= f.text_field :title %>

  <h4>本文</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create Book', class: "pull-right" %>
<% end %>
</div>