

<div class="container">
    <div class="row">
      <%= render 'users/list', book: @book, user: @user %>
      
<div class="col-xs-9">
   <h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th colsp="3"></th>
      <th>Title</th>
      <th>opinion</th>
    </tr>
    </thead>
    <% @books.each do |book| %>
  
<tr>
    <td>
      <%= link_to user_path(@user) do %>
        <%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %>
      <% end %>
    </td>
    <td><span><%= link_to book.title ,book_path(book)%></span></td>
    <td><span><%= book.body %></span>
      <i class="fa fa-comment"></i>
      <a href="#comments">コメント数 <%= book.book_comments.count %></a>
    </td>
 </tr>
<% end %>
</table>
</div>
</div>
</div>
