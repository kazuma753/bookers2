<% end %>
</div>
<h1>New book</h1>
<!-- form_for部分 -->
  <%= form_for(book) do |f| %>

    <% if book.errors.any? %>
    <b><%= book.errors.count %> errors prohibited this book from being saved:</b>
<ul>
<% book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>

<% end %>

  <h4>タイトル</h4>
