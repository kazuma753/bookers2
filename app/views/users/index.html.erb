<div class="container">
    <div class="row">
    	<%= render 'users/list', book:@book,user:current_user %>
    <div class="col-xs-9"> 
<h2>Users</h2>

 <table class="table">
 	<thead>
  	<tr>
  		<th>image</th>
  		<th>name</th>
  		<th colspan="3"></th>
　　　　　
  	</tr>
  </thead>
<% @users.each do |user| %>
  
  <tr>
  	<td><%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
 <td><span><%= user.name %></span></td>
 <td><%= link_to "Show", user_path(user.id) %></td>
</tr>



  <% end %>
 </table>
</div>
</div>
</div>
